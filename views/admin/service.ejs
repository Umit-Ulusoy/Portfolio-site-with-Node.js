<div>
    <h1>Manage Service Page</h1>
    <form action="/admin/services?_method=PUT" method="POST">
        <input type="text" name="headline" value="<%= servicePage.headline %>">
    <textarea name="context" ><%= servicePage.context %></textarea>
    <button type="submit" >Update</button>
    <button type="reset" >Reset The Fields</button>
</form>

<!-- Services -->
<h2>Manage Services</h2>
<div>
    <h3>Add A New One</h3>
    <form action="/admin/services/" method="POST">
        <input type="text" name="name" placeholder="Enter a service" /> <br />
        <textarea name="description" placeholder="Enter a description"></textarea><br />
        <button type="submit">Add</button>
        <button type="reset">Reset The Fields</button>
    </form>
</div>
<% if (services.length) { %>
<% for (let service of services) { %>
<div>
    <form action="/admin/services/<%= service.slug %>?_method=PUT" method="POST">
        <input type="text" name="name" value="<%= service.name %>" /><br />
    <textarea name="description"><%= service.description %></textarea><br />
<button type="submit">Update</button>
<button type="reset">Reset The Fields</button>
<a role="button" href="/admin/services/<%= service.slug %>?_method=DELETE">Delete</a>
</form>
</div>
<% } %>
<% }else { %>
    <div role="alert">You do not have any service</div>
    <% } %>

</div>